.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  max-height: 100%;
}

.header {
  display: flex;
  flex-shrink: 0;
  color: #FFF;
  background-color: black;
  align-items: center;
  height: 80rpx;
  border-bottom: 2px solid red;
}

.nav-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 0rpx 10rpx 0rpx 10rpx;
  display: inline-block
}

.header-text {
  /* padding-top: 22rpx; */
  font-size: 30rpx;
  font-weight: 100;
  margin-right: 5px;
}

.content {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  font-size: 34rpx;
  color: white;
  background-color: #f1f1f1;
  overflow: auto;
}

.content-header {
  text-align: center;
  font-size: 36px;
  line-height: 48px;
  margin: 0.5rem 0.5rem 0rem 0.5rem !important;
}

.column {
  /* float: left;
  width: 50%; */
  display: grid;
  height: 100%;
  flex: 50%;
  padding: 0rpx 20rpx 20rpx;
  justify-items: center;
}

.row {
  display: flex;
  width: 100%;
}

.row-flex {
  width: calc(100% - 40rpx);
  margin: 10rpx 20rpx 0rpx;
}

.row-title {
  width: 100%;
  text-align: center;
  margin: 0rem 0rem 0.1rem;
  font-size: 20px;
}

.row-title-button {
  width: 100%;
  text-align: center;
  margin: 0rem 0rem 0.1rem;
}

.row-extra {
  text-align: center;
}

.row-extra-button {

}

.row-flex-modal {
  width: 100%;
  display: flex;
  margin: 10rpx 20rpx 0rpx;
}

.row-button {
  margin: 0rem 0rem 0.25rem 1rem;
  display: flex;
}




.footer {
  flex-shrink: 0;
  font-size: 48rpx;
  font-weight: 200;
  text-align: center;
}

.tab-content {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  background-color: lightgray;
}

.am-card {
  width: 90%;
  box-shadow: 0px 5px 10px rgb(197, 194, 194);
  border-radius: 4px;
  margin: 20rpx 24rpx 10rpx 24rpx;
  align-items: center;
}

