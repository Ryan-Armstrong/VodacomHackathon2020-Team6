.content-box {
  display: flex;
  margin: 0.35rem;
  align-items: center;
  vertical-align: middle;
  /* height: 1000rpx; */
  /* width: 720rpx; */
  height: 95%;
  width: 90%;
  background-color: #f1f1f1;
  border: 2rpx solid #f1f1f1;
  border-radius: 4rpx;
  color: black;
}


.full-width {
  width: 100%;
  height: 100%;
  /* position: relative; */
