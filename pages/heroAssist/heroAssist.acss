  display: flex;
  justify-content: center;

}

.submitResetButton {
  width: 75%;
  margin: 10rpx;
  background-color: rgb(230,0,0);
  border-radius: 10rpx;
  color: white;
  border-color: rgb(230,0,0);
}

.forceButtonsBottom {
  position: relative;
  top: 3.75rem;
  text-align: center;
}

.card-bottom {
  text-align: center;
  border-bottom: 1px solid lightgrey;
  width: 100%;
}